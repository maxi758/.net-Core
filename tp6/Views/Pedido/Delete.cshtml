@model tp6.ViewModels.ModificarPedidoViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Borrar Pedido</title>
</head>
<body>

    <h4>Pedido</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="BorrarPedido" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NumeroPedido" class="control-label"></label>
                    <input asp-for="NumeroPedido" class="form-control" readonly />
                    @*<span asp-validation-for="Id" class="text-danger"></span>*@
                </div>
               
                <div class="form-group">
                    <label asp-for="Observacion" class="control-label"></label>
                    <div>
                        <input asp-for="Observacion" class="form-control" readonly />
                    </div>

                </div>
                <div class="form-group">
                    <label asp-for="EstadoPedido" class="control-label"></label>
                    <input asp-for="EstadoPedido" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Tipo" class="control-label"></label>
                    <input asp-for="Tipo" class="form-control" readonly />

                </div>
                <div class="form-group">
                    <input type="submit" value="Borrar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
